/* pages/meshare/meshare.wxss */
.box {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.content {
  padding: 40rpx 40rpx 500rpx 40rpx;
  box-sizing: border-box;
}

.cabinet {
  margin-top: 20rpx;
}

.sharebox {
  width: 100%;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  border-radius: 15px;
  background-color: rgba(239, 255, 232, 1);
  /* text-align: center; */
  box-shadow: 3px 5px 6px 0px rgba(0, 0, 0, 0.12);
  border: 1px solid rgba(255, 255, 255, 0);
  padding: 30rpx 86rpx 30rpx 40rpx;
  box-sizing: border-box;
  position: relative;
  margin-bottom: 20rpx;
}

.sharebox-top {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding-left: 30rpx;
  padding-right: 8rpx;
  box-sizing: border-box;
}

.sharebox-top-ig {
  width: 28rpx;
  height: 18rpx;
  position: absolute;
  bottom: 10rpx;
  right: 20rpx;
}

.xianshi {
  display: block;
}

.noxianshi {
  display: none;
}

.bghuang {
  background-color: rgba(252, 156, 33, 1);
}

.bghui {
  background-color: #d6d6d6;
}

.sharebox-top-openbox {
  width: 115rpx;
  height: 115rpx;
  border-radius: 12rpx;
  color: rgba(255, 255, 255, 1);
  font-size: 28rpx;
  /* text-align: center; */
  font-family: Microsoft Yahei;
  /* line-height: 116rpx; */
  /* border: 2rpx solid rgba(255, 255, 255, 0); */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.sharebox-top-openboxa>image {
  width: 115rpx;
  height: 115rpx;
}

.sharebox-con-title {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.sharebox-con-title>view {
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  font-size: 24rpx;
  padding-left: 30rpx;
}

/* 编辑运单号按钮 */
.editbox {
  width: 30rpx;
  height: 30rpx;
  margin-left: 24rpx;
}

/* 运单号 */
.waybillbox {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.waybillbox>input {
  width: 293rpx;
}

/* 我的预约 */
.mymack {
  width: 100%;
  /* height: 282rpx; */
  line-height: 40rpx;
  border-radius: 30rpx;
  background-color: rgba(232, 253, 255, 1);
  text-align: center;
  box-shadow: 6rpx 10rpx 12rpx 0rpx rgba(0, 0, 0, 0.12);
  border: 2rpx solid rgba(255, 255, 255, 0);
  padding: 32rpx 86rpx 40rpx 36rpx;
  box-sizing: border-box;
}

.mymack-name {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.mymack-pass {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.mymack-pass-name {
  color: rgba(16, 16, 16, 1);
  font-size: 16px;
  font-family: 'PingFangSC-regular';
}


.sharebox-con-bottom-space {
  display: flex;
  align-items: center;
}

.sharebox-con-bottom-space-image {
  width: 38rpx;
  height: 38rpx;
}

.sharebox-con-bottom-member image {
  width: 80rpx;
  height: 80rpx;
  border: none;
  border-radius: 50%;
}

.unregistered {
  width: 80rpx;
  height: 80rpx;
  border: 2rpx solid rgb(223, 223, 223);
  border-radius: 50%;
}

.sharedbox>view {
  width: 312rpx;
  height: 254rpx;
  line-height: 40rpx;
  border-radius: 30rpx;
  /* text-align: center; */
  box-shadow: 6rpx 10rpx 12rpx 0rpx rgba(0, 0, 0, 0.12);
  border: 2rpx solid rgba(255, 255, 255, 0);
  padding: 24rpx 0 0 24rpx;
  box-sizing: border-box;
}

.sharedbox-all {
  position: relative;
}

.sharedbox-all-con {
  margin-left: 90rpx;
  margin-top: 42rpx;
}

.sharedbox-all-cont {
  margin-left: 180rpx;
  margin-top: -30rpx;
}

.sharedbox-me-con {
  margin-top: 42rpx;
}

/* 扫码弹框 */
.kuang-box {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 999;
  background: rgba(0, 0, 0, 0.2);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.kuang {
  width: 80%;
  display: flex;
  flex-direction: column;
  /* padding: 20rpx; */
  background: white;
  box-shadow: 0px 10rpx 35rpx 0px rgba(0, 0, 0, 0.1);
  border-radius: 44rpx;

}

.kuang-text {
  width: 100%;
  padding-left: 46rpx;
  padding-right: 456rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.kuang-btn {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.kuang-btn>view {
  padding: 30rpx 80rpx;
  font-size: 30rpx;
  background: rgba(238, 238, 238, 1);
  border-radius: 44rpx;
}

/* 模糊搜索框 */
.kuang-vague {
  position: absolute;
  width: 514rpx;
  height: 350rpx;
  top: 130rpx;
  left: 310rpx;
  background-color: white;
  z-index: 1;
  margin-left: -44%;
  padding: 60rpx 20rpx 36rpx;
  box-sizing: border-box;
  overflow: auto;
  border: 2rpx solid #d6d6d6;
  border: none;
  box-shadow: 0rpx 20rpx 70rpx 0rpx rgba(0, 0, 0, 0.3);
  border-radius: 6px;
  font-size: 26rpx;
}