/* pages/share/share.wxss */
.content {
  padding: 40rpx 40rpx 400rpx 40rpx;
}

.sharebox-con {
  width: 100%;
  line-height: 100rpx;
  border-radius: 15px;
  /* text-align: center; */
  box-shadow: 3px 5px 6px 0px rgba(0, 0, 0, 0.12);
  border: 1px solid rgba(255, 255, 255, 0);
  padding: 0rpx 20rpx 30rpx;
  box-sizing: border-box;
}

.sharebox-con-select {
  width: 100%;
}

.sharebox-con-select-oddnumber {
  width: 30%;
}

.sharebox-con-select-use {
  width: 40%;
}

.openbox {
  width: 116rpx;
  height: 52rpx;
  border-radius: 12rpx;
  background-color: rgba(252, 156, 33, 1);
  color: rgba(255, 255, 255, 1);
  font-size: 24rpx;
  text-align: center;
  font-family: Microsoft Yahei;
  border: 2rpx solid rgba(255, 255, 255, 0);
}

.openboxopen {
  width: 116rpx;
  height: 52rpx;
  border-radius: 12rpx;

  color: rgba(255, 255, 255, 1);
  font-size: 24rpx;
  text-align: center;
  font-family: Microsoft Yahei;
  border: 2rpx solid rgba(255, 255, 255, 0);
}

.xiala {
  width: 28rpx;
  height: 18rpx;
}

.hui {
  background-color: #d6d6d6;
}

.huang {
  background-color: rgba(252, 156, 33, 1);
}

/* 扫码弹框 */
.kuang-box {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 999;
  background: rgba(0, 0, 0, 0.2);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.kuang {
  width: 80%;
  display: flex;
  flex-direction: column;
  /* padding: 20rpx; */
  background: white;
  box-shadow: 0px 10rpx 35rpx 0px rgba(0, 0, 0, 0.1);
  border-radius: 44rpx;

}

.kuang-text {
  width: 100%;
  padding-left: 46rpx;
  padding-right: 456rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.kuang-btn {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.kuang-btn>view {
  padding: 30rpx 80rpx;
  font-size: 30rpx;
  background: rgba(238, 238, 238, 1);
  border-radius: 44rpx;
}

.kuang_box_close {
  position: absolute;
  left: -44rpx;
  top: -48rpx;
  padding: 0;
  font-size: 0;
  background: none;
  border-radius:0;
}

.kuang_box_close>image {
  width: 56rpx;
  height: 56rpx;
}