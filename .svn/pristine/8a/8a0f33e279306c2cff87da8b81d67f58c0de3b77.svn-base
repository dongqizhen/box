/* components/dialog.wxss */
.modal{
    position: fixed;
    top: 0rpx;
    left: 0rpx;
    right: 0rpx;
    bottom: 0rpx;
    width: 100%;
    height: 100%; 
    z-index: 100;
  }
  
  .modal-mask{
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 97;
    background:rgba(0,0,0,1);
    opacity:0.3;
  }
  
  
  .modal-layer-sm{
     width: 60%; 
     transform : translate3d(-50%,-50%,0);
     left : 50%;  
  } 
  
  .modal-layer-md{
     width: 80%; 
     transform : translate3d(-50%,-50%,0);
     left : 50%;    
  } 
  
  .modal-layer-full{
     width: 100%; 
     left: 0;  
  } 
  
  
  .modal-layer{
    position: absolute;
    background: transparent;
    top: 50%;    
    display: flex;
    flex-direction: column;
    z-index: 98;   
    /* box-shadow: 0 4rpx 14rpx rgba(0,0,0,.4);  */
     box-shadow:0px 10rpx 35rpx 0px rgba(0, 0, 0, 0.1);
  border-radius:44rpx;
  }
  
  .modal-header{
    background: #fff;
    color:  #333;
    padding: 20rpx;
    font-size: 30rpx;
    text-align: center;
    border-top-left-radius: 44rpx;
    border-top-right-radius: 44rpx;  
 }

  .modal-body{
    flex:  1;  
    padding:46rpx;
    text-align: center;
    background: #ffffff;  
  }

  .modal-body view{
    font-size: 30rpx;
    color: #333333
  }

.modal-footer{
    background: #ffffff;
    /* flex-direction: row; */
    /* display: flex; */
    /* align-items: center;
    width: 100%;   */
    /* border-top : 1rpx solid #eee;    */
    border-bottom-left-radius: 44rpx;
    border-bottom-right-radius: 44rpx;  
    padding-left: 46rpx;
    padding-right: 46rpx;
    padding-bottom: 40rpx;
    padding-top: 20rpx;
}

.modal-close{
    color: #fff;
    font-size: 48rpx;
    position: absolute;
    right: 40rpx;
    top: 0;
    z-index: 98;
}


