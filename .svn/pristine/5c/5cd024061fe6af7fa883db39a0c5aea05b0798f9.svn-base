/* pages/phone-login/phone-login.wxss */
page{
  background:#ffffff;
}
.phonenumbermain{
  display:inline-block;
}
.phonemain{
  border-bottom:1px solid #dddddd;
  float:left;
  width:702rpx;
  line-height:60rpx;
  padding:20rpx 0;
  margin:0 24rpx;
}
.phonemain text{
  width:130rpx;
  font-size:28rpx;
  float:left;
}
.phonemain input{
  font-size:28rpx;
  float:left;
  margin-top:5rpx;
  padding-left:10rpx;
}
.buttoncode,text.buttoncode{
  width:187rpx;
  height:60rpx;
  border-radius:8rpx;
  color:#787EE1 !important;
  font-size:26rpx;
  border:1rpx solid #787EE1 !important;
  float:right;
  padding:0 !important;
  line-height:58rpx;
  background:#fff !important;
  text-align:center;
}
.button-hover{
  background:none !important;
}